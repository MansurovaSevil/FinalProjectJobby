@model JobbyProject.ViewModel.ClassSingle
@{
    ViewBag.Title = "Index";
    


}



<!-- MAIN-->
<main id="main">

    <!-- PAGE HEADING-->
    <section class="section page-heading js-parallax-scroll" style="background-image: url('../../Public/images/bg-heading-03.jpg');">
        <div class="container">
            <div class="page-heading-inner">
                <div class="section-heading section-heading-1 section-heading-1--tiny text-left">
                    <h2 class="section-heading__title">Информация класса</h2>
                    <div class="section-heading__line">
                        <img src="~/Public/images/icon/line-blue-small.png" alt="Line" />
                    </div>
                </div>
                <nav class="au-breadcrumb">
                    <ul class="list-unstyled list-breadcrumb">
                        <li class="list-breadcrumb__item">
                            <a href="@Url.Action("index","home")">Главная</a>
                        </li>
                        <li class="list-breadcrumb__item">Класс</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- END PAGE HEADING-->
    <!-- CLASS SINGLE-->
    <section class="section p-t-125">
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-lg-9">
                    <div class="p-r-10 p-md-r-0">
                        <div class="media media-class-single">
                            <div class="media__img m-b-30">
                                <img class="img-radius" src="~/Public/images/@Model.classes.Image" alt="Sand Play Class">
                                <span class="media-our-class__price media-our-class__price--big">
                                    <span class="inner">@Model.classes.Price АЗН</span>
                                </span>
                            </div>
                            <div class="media__body">
                                <h2 class="title title--xl m-b-20">@Model.classes.Name</h2>
                                <p class="m-b-15">@Model.classes.Description</p>
                              
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-lg-3">
                    <div class="au-card blue">
                        <div class="au-card__head">
                            <h3 class="title title--white title--md">Детально</h3>
                        </div>
                        <div class="au-card__body">
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-calendar-full"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Начало Даты</h5>
                                    <span class="d-block">@Model.classes.StartDate</span>
                                </div>
                            </div>
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-clock"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Открыто</h5>
                                    <span class="d-block">@Model.classes.OpenHours.ToString("hh:mm")  - @Model.classes.CloseHours.ToString("HH:mm ") </span>
                                </div>
                            </div>
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-leaf"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Возраст</h5>
                                    <span class="d-block">@Model.classes.age.MinAge - @Model.classes.age.MaxAge </span>
                                </div>
                            </div>
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-home"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Мест</h5>
                                    <span class="d-block">@Model.classes.SizeSeat детей</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="au-card yellow">
                        <div class="au-card__head">
                            <h3 class="title title--white title--md">Информация</h3>
                        </div>
                        <div class="au-card__body">
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-users"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Учитель</h5>
                                    <span class="d-block">@Model.classes.teacher.Fullname</span>
                                  
                                </div>
                            </div>
                            <div class="box box-info-2">
                                <div class="box__head">
                                    <div class="box-icon">
                                        <span class="lnr lnr-phone"></span>
                                    </div>
                                </div>
                                <div class="box__body">
                                    <h5 class="title">Телефон</h5>
                                    <span class="d-block">@Model.classes.teacher.Phone</span>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </section>
    <!-- END CLASS SINGLE-->
    <!-- OTHER CLASS-->
    <section class="section p-t-25 p-md-t-40 p-b-60">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading section-heading-1 section-heading-1--small text-left">
                        <h2 class="section-heading__title">Другие классы</h2>
                        <div class="section-heading__line">
                            <img src="~/Public/images/icon/line-blue-small.png" alt="Line">
                        </div>
                    </div>
                    <div class="slick-class-3">
                        <div class="slick__wrap-content js-slick-wrapper" data-slick-xs="1" data-slick-sm="2" data-slick-md="2" data-slick-lg="3" data-slick-xl="3" data-slick-dots="false" data-slick-customnav="true" data-slick-autoplay="true">
                            <div class="slick__content js-slick-content">



                               @foreach (var item in Model.clasr)


                               {
                                    <div class="slick__item">
                                        <div class="media media-our-class-3">
                                            <div class="media__img">
                                                <a href="@Url.Action("index","classesSingle",new {id=item.ID })">
                                                    <img src="~/Public/images/@item.Image" alt="Color Matching Class" />
                                                </a>
                                                <span class="media-our-class__price">
                                                    <span class="inner">@item.Price АЗН</span>
                                                </span>
                                            </div>
                                            <div class="media__body">
                                                <h3 class="media__title">
                                                    <a href="@Url.Action("index","classesSingle",new {id=item.ID })">@item.Name</a>
                                                </h3>
                                                <span class="date-time m-r-15">@item.OpenHours.ToString("hh:mm")  - @item.CloseHours.ToString("HH:mm")</span>
                                                <span class="date-time">@item.StartDate.ToString("dd MMMM yyyy")</span>
                                                <div class="media-our-class__info">
                                                    <div class="row no-gutters">
                                                        <div class="col-6">
                                                            <div class="item has-seprator">
                                                                <span class="name">Возраст</span>
                                                                <span class="value">@item.age.MinAge - @item.age.MaxAge Лет</span>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="item">
                                                                <span class="name">Мест</span>
                                                                <span class="value">@item.SizeSeat детей</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                </div>
                            <div class="slick__nav arrows-3">
                                <span class="slick-prev slick-arrow js-slick-prev zmdi zmdi-chevron-left"></span>
                                <span class="slick-next slick-arrow js-slick-next zmdi zmdi-chevron-right"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END OTHER CLASS-->
    <!-- STATISTIC-->
    <section class="section">
        <div class="row no-gutters statistic-1">
            <div class="col-sm-6 col-lg-3">
                <div class="statistic__item blue">
                    <div class="icon">
                        <img src="~/Public/images/icon/ic-statis-01.png" alt="icon 1">
                    </div>
                    <div class="statistic__item-inner">
                        <span class="number js-counterup">168</span>
                        <span class="desc">Квалифицированные учителя</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="statistic__item yellow">
                    <div class="icon">
                        <img src="~/Public/images/icon/ic-statis-02.png" alt="icon 2">
                    </div>
                    <div class="statistic__item-inner">
                        <span class="number js-counterup">240</span>
                        <span class="desc">Детский сад</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="statistic__item pink">
                    <div class="icon">
                        <img src="~/Public/images/icon/ic-statis-03.png" alt="icon 3">
                    </div>
                    <div class="statistic__item-inner">
                        <span class="number js-counterup">281</span>
                        <span class="desc">Оценка для малышей</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="statistic__item green">
                    <div class="icon">
                        <img src="~/Public/images/icon/ic-statis-04.png" alt="icon 4">
                    </div>
                    <div class="statistic__item-inner">
                        <span class="number js-counterup">317</span>
                        <span class="desc">Активность года</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END STATISTIC-->

</main>
<!-- END MAIN-->