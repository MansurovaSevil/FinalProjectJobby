
@{

    ViewBag.Title = "Register";
    
}



<!DOCTYPE html>
<html>

<body>
    <div class="container" style="padding-left:11%">
        <div class="contact-form ">
            <h4>Статус Представления</h4> 
            <div id="form-messages"></div>
            <div class="container">
                <form action="@Url.Action("Register","User")" method="post">
                    <div class="row">
                        <div class="col-sm-10" style="text-align:center;">
                            <div class="form-group in_name ficon mt-30">
                                <span><i class="fas fa-signature" style="color:wheat"></i></span>
                                <input type="text" name="FullName" class="form-control" id="firstname" placeholder="Имя" required="required" style="background-color: #1d2326;color:white">
                            </div>

                            <div class="form-group in_email ficon">
                                <span><i class="fa fa-envelope" style="color:wheat"></i></span>
                                <input type="email" name="Email" class="form-control" id="email" placeholder="Емаил" required="required" style="background-color: #1d2326;color:white">
                            </div>

                            <div class="form-group in_subject ficon">
                                <span><i class="fas fa-key" style="color:wheat"></i></span>
                                <input type="password" name="Password" class="form-control" id="password" placeholder="Пароль" required="required" style="background-color: #1d2326;color:white">
                            </div>

                            <input type="submit" value="Регистрация" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

