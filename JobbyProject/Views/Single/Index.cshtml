                                <li class="list-tags__icon">
                                    <i class="fas fa-tags"></i>
                                </li>
                                <li class="list-tags__item text bol">
                                    <a href="#">@Model.blog.blogCateg.Name</a>
                                </li>

                            </ul>
                            <ul class="list-unstyled list-inline list-social list-social-3">
                                <li class="list-inline-item">
                                    <a class="ic-fb" href="https://www.facebook.com">
                                        <i class="zmdi zmdi-facebook-box"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="ic-twi" href="https://twitter.com">
                                        <i class="zmdi zmdi-twitter"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="ic-insta" href="https://www.instagram.com">
                                        <i class="zmdi zmdi-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>





                        <div class="blog-single__footer">
                            <nav class="nav-blog">
                                <ul class="list-nav-blog list-unstyled">
                                    <li class="list-nav-blog__item prev">
                                        <a href="#">
                                            <div class="image">
                                                <img src="~/Public/images/@Model.blog.GaleryBlogs.FirstOrDefault().ImageBlog" alt="Nav blog 1">
                                            </div>
                                            <span class="list-nav-blog__text">Предыдущее сообщение</span>
                                        </a>
                                    </li>
                                    <li class="list-nav-blog__item next">
                                        <a href="#">
