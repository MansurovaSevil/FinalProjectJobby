@model IEnumerable<JobbyProject.Models.GaleryBlog>

@{


    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <a class="btn btn-success btn-lg" style="margin:20px 0" href="@Url.Action("Create","GaleryBlogs")">Create</a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.blog.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageBlog)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.blog.Name)
                    </td>
                    <td>
                        <img width="400" src="~/Public/images/@item.ImageBlog" class="img-thumbnail" />
                    </td>
                    <td>
                        <a class="btn btn-info btn-lg" style="margin:20px 0" href="@Url.Action("Edit","GaleryBlogs", new { id = item.ID })">Edit</a>
                        <a class="btn btn-default" style="margin:20px 0" href="@Url.Action("Details","GaleryBlogs", new { id = item.ID })">Details</a>
                        <a class="btn btn-danger btn-lg" style="margin:20px 0" href="@Url.Action("Delete","GaleryBlogs", new { id = item.ID })">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</section>
