@model IEnumerable<JobbyProject.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <a class="btn btn-success btn-lg" style="margin:20px 0" href="@Url.Action("Create","Classes")">Create</a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SizeSeat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CloseHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherID)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="~/Public/images/@item.Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SizeSeat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CloseHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.teacher.Fullname)
                    </td>
                    <td>
                        <a class="btn btn-info btn-lg" style="margin:20px 0" href="@Url.Action("Edit","Classes", new { id = item.ID })">Edit</a>
                        <a class="btn btn-default" style="margin:20px 0" href="@Url.Action("Details","Classes", new { id = item.ID })">Details</a>
                        <a class="btn btn-danger btn-lg" style="margin:20px 0" href="@Url.Action("Delete","Classes", new { id = item.ID })">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</section>