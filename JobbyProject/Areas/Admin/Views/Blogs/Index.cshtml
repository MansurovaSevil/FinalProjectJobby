@model IEnumerable<JobbyProject.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <a class="btn btn-success btn-lg" style="margin:20px 0" href="@Url.Action("Create","Blogs")">Create</a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlogDesc1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlogDesc2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlogCategID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.adminka)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogDesc1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogDesc2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.blogCateg.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.adminka.Fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a class="btn btn-info btn-lg" style="margin:20px 0" href="@Url.Action("Edit","Blogs", new { id = item.ID })">Edit</a>
                        <a class="btn btn-default" style="margin:20px 0" href="@Url.Action("Details","Blogs", new { id = item.ID })">Details</a>
                        <a class="btn btn-danger btn-lg" style="margin:20px 0" href="@Url.Action("Delete","Blogs", new { id = item.ID })">Delete</a>
                    </td>
                </tr>
            }

        </table>
        </div>
    </section>
